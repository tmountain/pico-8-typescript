{
  "name": "pico-8-typescript",
  "version": "0.1.0",
  "description": "A workflow to create PICO-8 games with TypeScript.",
  "bin": {
    "tspico8": "./bin/tspico8.js"
  },
  "scripts": {
    "build-bin": "tsc --outDir bin src/tspico8.ts && chmod +x bin/tspico8.js",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "keywords": [
    "pico-8",
    "typescript",
    "transpile",
    "lua",
    "transpiler"
  ],
  "author": "Travis Whitton",
  "license": "MIT",
  "dependencies": {
    "child_process": "^1.0.2",
    "chokidar": "^3.5.3",
    "commander": "^9.3.0",
    "fs-extra": "^10.1.0",
    "@quentin_widlocher/jspicl-cli": "^0.5.1",
    "strip-json-comments": "^4.0.0",
    "typescript": "^4.7.3",
    "uglify-js": "^3.16.0",
    "yesno": "^0.3.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "prettier": "^2.6.2"
  }
}